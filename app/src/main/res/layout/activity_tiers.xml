<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tiers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="S3 Overwatch Tier List"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <TextView
        android:text="Ana, Lucio, Reinhardt"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Tier 2"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="D.Va, Roadhog, Soldier:76, Zarya"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Mei, Tracer, McCree, Genji, Hanzo, Winston, Zenyatta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView15"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView16" />

    <TextView
        android:text="Tier 3"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:text="Tier 1"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:text="Tier 4"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:text="Symmetra, Reaper, Widowmaker, Pharah, Mercy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="17dp"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView18" />

    <TextView
        android:text="Sombra, Junkrat, Torbjorn, Bastion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:gravity="center_horizontal"
        android:textSize="17dp"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Tier 5"
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Check Source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tierbutton"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />


</RelativeLayout>
